@using Portfolio.Web.Helpers;

@{
    var controllerName = this.ViewContext.RouteData?.Values?["controller"]?.ToString();
}

<div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
    <div class="brand-logo">
        <a asp-controller="Home" asp-action="Index">
            <img src="~/dashtreme/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
            <h5 class="logo-text">Dashtreme Admin</h5>
        </a>
    </div>
    <ul class="sidebar-menu do-nicescrol">
        <li>
            <a href="/" target="_blank">
                <i></i> <span>Home</span>
            </a>
        </li>
        <li class="sidebar-header">MAIN NAVIGATION</li>
        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Home")">
            <a asp-controller="Home" asp-action="Index">
                <i class="zmdi zmdi-view-dashboard"></i> <span>Dashboard</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Introduce")">
            <a asp-controller="Introduce" asp-action="Index">
                <span>Introduce</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "About")">
            <a asp-controller="About" asp-action="Index">
                <span>About</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Resume")">
            <a asp-controller="Resume" asp-action="Index">
                <span>Resume</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Specialization")">
            <a asp-controller="Specialization" asp-action="Index">
                <span>Specializations</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Skill")">
            <a asp-controller="Skill" asp-action="Index">
                <span>Skills</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Testimonial")">
            <a asp-controller="Testimonial" asp-action="Index">
                <span>Testimonial</span>
            </a>
        </li>

        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Contact")">
            <a asp-controller="Contact" asp-action="Index">
                <span>Contact</span>
            </a>
        </li>

        <li class="sidebar-header">MODÜLLER</li>
        <li class="@IsActiveHelper.MenuIsActive(controllerName, "Menu")"><a asp-controller="menu"><i class="zmdi zmdi-coffee text-danger"></i> <span>Menu</span></a></li>
        <li><a href="javaScript:void();"><i class="zmdi zmdi-chart-donut text-success"></i> <span>Settings</span></a></li>
        <li><a href="javaScript:void();"><i class="zmdi zmdi-share text-info"></i> <span>Theme</span></a></li>
        @await Component.InvokeAsync("AdminMaintenance")
    </ul>
</div>