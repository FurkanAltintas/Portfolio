@using Portfolio.Web.Helpers;
@model IDataResult<List<MenuGetAllDto>>

@if (Model.IsSuccess)
{
    <ul class="menu scroll-nav d-flex">
        @foreach (var menu in Model.Data)
        {
            <li>
                <a class="scroll-to" href="#@menu.Slug">
                    @*<my-menu menu-value="@menu" menu-type="SmallMenu"></my-menu>*@
                    <span>@EnlargeFirstCharacterHelper.EnlargeFirstCharacter(menu.Slug)</span> <i class="@menu.IconName"></i>
                </a>
            </li>
        }
    </ul>
}