@model UserLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin - Free Dashboard for Bootstrap 4 by Codervent</title>
    <!--favicon-->
    <link rel="icon" href="~/dashtreme/assets/images/favicon.ico" type="image/x-icon">
    <!-- Bootstrap core CSS-->
    <link href="~/dashtreme/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animate CSS-->
    <link href="~/dashtreme/assets/css/animate.css" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="~/dashtreme/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <!-- Custom Style-->
    <link href="~/dashtreme/assets/css/app-style.css" rel="stylesheet" />

</head>

<body class="bg-theme bg-theme9">

    <!-- Start wrapper-->
    <div id="wrapper">

        <div class="card card-authentication1 mx-auto my-5">
            <div class="card-body">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="~/dashtreme/assets/images/logo-icon.png" alt="logo icon">
                    </div>
                    <div class="card-title text-uppercase text-center py-3">Sign In</div>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Username" class="sr-only">Username</label>
                            <div class="position-relative has-icon-right">
                                <input asp-for="Username" class="form-control input-shadow" placeholder="Enter Username">
                                <div class="form-control-position">
                                    <i class="icon-user"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="sr-only">Password</label>
                            <div class="position-relative has-icon-right">
                                <input asp-for="Password" class="form-control input-shadow" placeholder="Enter Password">
                                <div class="form-control-position">
                                    <i class="icon-lock"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-6">
                                <div class="icheck-material-white">
                                    <input asp-for="RememberMe" />
                                    <label asp-for="RememberMe">Remember me</label>
                                </div>
                            </div>
                            <div class="form-group col-6 text-right">
                                <a asp-action="ResetPassword">Reset Password</a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-light btn-block">Sign In</button>
                    </form>
                </div>
            </div>
        </div>


    </div><!--wrapper-->
    <!-- Bootstrap core JavaScript-->
    <script src="~/dashtreme/assets/js/jquery.min.js"></script>
    <script src="~/dashtreme/assets/js/popper.min.js"></script>
    <script src="~/dashtreme/assets/js/bootstrap.min.js"></script>

    <!-- Custom scripts -->
    <script src="~/dashtreme/assets/js/app-script.js"></script>

</body>
</html>
